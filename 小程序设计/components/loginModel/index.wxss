/* components/loginModel/index.wxss */
.login{
    width: 85%;
    color: rgb(80, 80, 80);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 999;
    position: fixed;
    background: #ffffff;
    border-radius: 15rpx;
    padding: 20rpx 20rpx 30rpx;
    top: 480rpx;
    left: 0rpx;
    font-size: 33rpx;
    box-sizing: border-box;
    left: 50%;
    transform: translateX(-50%);
}
.loginSelect{
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.loginHr{
    width: 100%;
    border-top: 1rpx solid rgb(228, 228, 228);
    margin: 15rpx 0rpx 30rpx;
}
.bg-login{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(141, 141, 141, 0.8);
    top: 0rpx;
    left: 0rpx;
    z-index: 999;
}
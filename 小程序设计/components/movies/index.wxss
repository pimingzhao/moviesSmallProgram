/* components/movies/index.wxss */
.deNav{
    position: relative;
}
.container{
    display: flex;
    flex-direction: column;
    width: 220rpx;
    font-size: 32rpx;
    border-radius: 15rpx;
    position: relative;
}
.container>image{
    width: 220rpx;
    height: 290rpx;
    border-radius: 15rpx;
    box-shadow: 0 0 8px 4px rgb(212, 210, 210);
}
.container>text{
    margin-top: 20rpx;
}
.star{
    display: flex;
    justify-content: space-between;
}
.container>title{
    position: absolute;
    top: 243rpx;
    right: 1rpx;
    background: #666666;
    color: #fff;
    font-size: 30rpx;
    display: block;
    padding: 5rpx 7rpx;
    border-radius: 15rpx;
}
.deleteCollect{
    position: absolute;
    width: 100%;
    height: 290rpx;
    background: rgba(156, 156, 156, 0.8);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 9999;
    top: 0rpx;
    left: 0rpx;
    border-radius: 15rpx;
}
.deleteCollect>button{
    background: #6AB2D8;
    color: #fff;
    margin-top: 60rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    padding: 4rpx 12rpx;
}
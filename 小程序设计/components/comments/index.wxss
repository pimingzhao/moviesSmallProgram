/* components/comments/index.wxss */
.comContainer{
    padding: 10rpx 15rpx;
    font-size: 32rpx;
    color: #808080;
    border-top: 1rpx solid #e1e1e1;
    border-bottom: 1rpx solid #e1e1e1;
    position: relative;
}
.writeContent{
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    padding: 12rpx 20rpx;
    color: #fd284c;
    background: #5a5a5a;
    border-radius: 10rpx;
}
.comContainer .content{
    font-size: 39rpx;
    color: #000;
}
.comContainer .author{
    display: flex;
    padding: 0rpx 5rpx;
    align-items: center;
    justify-content: space-between;
    font-size:28rpx;
}
.author .author-left{
    display: flex;
    padding: 20rpx 5rpx;
    align-items: center;
    font-size: 34rpx;
}
.comContainer image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.comContainer text{
    display: block;
    padding: 15rpx;
    background: #fafafa;
    border-top: 1rpx solid #e7e7e7;
    border-radius: 10rpx;
    text-indent: 60rpx;
    overflow: hidden;
}
.shelter{
    width: 100%;
    height: 100%;
    background: rgba(33, 33, 33, 0.7);
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
}
.com-container{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    z-index: 300;
}
.comment-btn{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 25rpx 15rpx;
    border-bottom: 1rpx solid #e0dddd;
}
.comment-btn button{
    background: #71BFF2;
    color: #fff;
}
.com-container textarea{
    width: 95%;
    margin: 20rpx auto;
    /* height: 75rpx; */
    padding: 10rpx;
    font-size: 32rpx;
    box-sizing: border-box;
    border: 1rpx solid #a5a5a5;
    border-radius: 10rpx;
}
.com-container text{
    position: fixed;
    bottom: 30rpx;
    right: 28rpx;
    z-index: 600;
    font-size: 30rpx;
}
.com-container button{
    width: 130rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 35rpx;
    padding: 0;
    margin: 0;
}
.com-content{
    width: 98%;
    height: 70rpx;
    font-size: 32rpx;
    line-height: 70rpx;
    text-align: center;
    color: #fd284c;
    background: #e0dddd;
    border-radius: 10rpx;margin: 20rpx auto 0;
}
.com-container .icon{
    position: fixed;
    bottom: 268rpx;
    right: 28rpx;
    z-index: 600;
}
.commentTemp{
  text-align: center;
  margin: 40rpx auto;
}